<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".NowPlaying2">

    <Button
        android:id="@+id/back2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK" />


    <ImageView
        android:id="@+id/nirvanaAblum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp"
        android:src="@drawable/nirvana2" />


    <TextView
        android:id="@+id/heartShapedBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="113dp"
        android:text="HeartShaped Box"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Nirvana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heartShapedBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-113dp"
        android:text="Nirvana"
        android:textSize="35sp"
        android:textStyle="bold" />


</RelativeLayout>